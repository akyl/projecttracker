@model ProjectTracker.Models.Project

@{
    ViewBag.Title = "Create";
}

<h2>Новый проект</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="Model.Name" class="control-label col-md-2">Наименование</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="Model.BeginDate" class="control-label col-md-2">Начало</label>
            <div class="input-group date col-md-3" id="cBeginDate" >
                <input type='text' class="form-control" name="BeginDate" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>

        <div class="form-group">
            <label for="Model.EndTime" class="control-label col-md-2">Конец</label>
            <div class='input-group date col-md-3' id='cEndDate'>
                <input type='text' class="form-control" name="EndDate" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
       
        <div class="form-group">
            <label for="Model.Description" class="control-label col-md-2">Приоритет</label>
            <div class="col-md-10">
                @Html.EnumDropDownListFor(x=>x.Priority, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Далее" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
